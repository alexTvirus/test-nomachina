#RUN chmod  0400 /usr/NX/etc/server.lic

#RUN	mkdir -p /etc/NX

#RUN chmod -R 777 /etc/NX

RUN chmod -R 777 /xfce4.sh

RUN chmod -R 777 /ngrok

# Expose port 80 để nhận request
#EXPOSE 4040
USER root

# Khởi động Nginx
#ENTRYPOINT ["/bin/bash", "-c", "/etc/NX/nxserver --startup && tail -f /dev/null"]
